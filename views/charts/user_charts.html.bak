{{extend 'layout.html'}}
    
    
    
    <style>
        
        #page-frame{
            width: 400px;
        }
        
    #usercharts{
        float: left;
        width: 200px;
        margin-right: 50px;
         
    }
    #allcharts{
        
        padding-left: 50px;
        width:150px;
        margin-right: 50px;
        float:left;
        border-left-size: 1pt;
        border-left-style: solid;
        border-left-color: #000000; 
    }
    .chartholder{
      clear:both;
      vertical-align:middle;  
      
    }
    .chartimage{
        float:left;
        margin: 5px;
    }
    .userimage{
            position:relative;
            width:100%;
        	margin: 5px;
    }
    
    .userimage .usermsg{
            position: absolute; 
   			top: 1px; 
   			left: 1px; 
            font-size: 8pt;
            font-weight: bold;
            font-color:#000000;
            background-color:#ffffff;        
    }        
    
    
    .charttext{
           
        float:left;
        vertical-align:middle;
        font-size: 8pt;
        
    }
   
    .subscribe_form textarea{
        width:150px;
        height:75px;
    }
    
    #user_chart_title{
        width:150px;
    }
    
    .subscribed{
        background-color:#00ff00;
        font-weight: bold;
    }
    
</style>

<h2>Chart Subscriptions</h2>
<div id="page-frame">
<div id="usercharts">
    <h4>My Chart Subscriptions</h4>
    {{for chart in mycharts:}}
    <div class="chartholder">
    	<div class="userimage">
    		{{=IMG(_src=URL('download',args=chart.id_chart.file),_width='150px')}}<BR>
            <span class="usermsg">{{=A('Un-Subscribe',_href=URL('unsubscribe',vars={'id_chart': chart.id}))}}</span>
        </div>
        <div class="usertext">
            
        </div>
    </div>
	{{pass}}
</div>

<div id="allcharts">
    <h4>Available Charts</h4>
    {{for chart in allcharts:}}
    <div class="chartholder">
    	<div class="chartimage">
    		{{=IMG(_src=URL('download',args=chart.file),_width='150px')}}<BR>
        </div>
        <div class="charttext">
            Workbook: {{=chart.id_workbook.title}}<BR>
            Sheet: {{=chart.worksheet}}<BR>
            {{if is_my_chart(chart.chartName):}}
            <span class="subscribed">You already subscribe to this chart</span>
            {{else:}}
            {{=A('Add to My Charts',_href=URL('subscribe_form',vars={'id_chart': chart.id}), cid=str(chart.chartName).replace('.','_'))}}
           
            {{pass}}
            <div id="p"></div>
            <div id="{{=str(chart.chartName).replace('.','_')}}" class="subscribe_form"></div>
        </div>
    </div>
	{{pass}}
</div>
</div>
